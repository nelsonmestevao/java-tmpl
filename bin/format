#!/usr/bin/env bash

. scripts/helpers.sh

PROGRAM=$(basename "$0")
VERSION=0.1.1

function display_help() {
  cat <<EOF
    Usage:
      format [options] [java | shell]

    Options:
      -h --help         Show this screen.
      -v --version      Show version.
EOF
}

function format() {
  case $1 in
    shell)
      echo_info "${FUNCNAME[0]}" "${1} scripts"
      shfmt -i 2 -ci -s -w -f .
      ;;
    java)
      echo_info "${FUNCNAME[0]}" "${1} files"
      bin/mvnw fmt:format
      ;;
  esac
}

case $1 in
  -h | --help)
    display_help
    ;;
  -v | --version)
    echo "${PROGRAM} script version ${VERSION}"
    ;;
  shell | bash | sh | scripts)
    format shell
    ;;
  java | *)
    format java
    ;;
esac
